<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Top header start -->
<header class="top-header hidden-xs" id="top">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="list-inline">
                     <a href="/home/index"><i class="glyphicon glyphicon-home"></i>HOME</a>
                    <a href="tel:011-80395483"><i class="fa fa-phone"></i>+91-8309136848</a>
                    <a href="tel:info@themevessel.com"><i class="fa fa-envelope"></i>info@clickdoor.in</a>
                </div>
            </div>
            <div id="loadLoginHead" style="display:none;">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <ul class="top-social-media pull-right">
                        <li>
                            <a href="/owner/submitNewProperty" class="button">List Your House</a>
                        </li>
                        <li>
                            <a href="/account/login" class="sign-in"><i class="fa fa-sign-in"></i> Login</a>
                        </li>
                        <li>
                            <a href="/account/register" class="sign-in"><i class="fa fa-user"></i> Register</a>
                        </li>
                    </ul>
                </div>
            </div> 
            <div id="loadUserDetails" style="display:none;">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <ul class="top-social-media pull-right">
                        <li>
                            <a href="/owner/submitNewProperty" class="button">List Your House</a>
                        </li>

                        <li>
                            <a href="/common/dashboard" class="sign-in"><i class="fa fa-user"></i>Hi @Session["UserId"]</a>
                        </li>
                    </ul>
                </div>
            </div>
             </div>
    </div>
</header>
<!-- Top header end -->

    <div>
       @RenderBody()
    </div>
    <div class="copy-right">
    <div class="container">
        &copy;  2017 <a href="http://clickdoor.in/" target="_blank">Click Door</a>. Trademarks and brands are the property of their respective owners.
    </div>
</div>
    <script type="text/javascript">
        $(document).ready(function () {
            var userID = "@Session["UserId"]"
            if (userID == "") {
                $('#loadUserDetails').hide();
                $('#loadLoginHead').show();
            }
            else {
                $('#loadUserDetails').show();
                $('#loadLoginHead').hide();
            }
            return false;
        });
