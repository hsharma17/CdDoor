@model CDModels.submitNewProperty

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>ClickDoor- Register Property</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <!-- External CSS libraries -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/animate.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-submenu.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/css/leaflet.css" type="text/css">
    <link rel="stylesheet" href="~/css/map.css" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/jquery.mCustomScrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/css/dropzone.css">

    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/flaticon.css">
    <link rel="stylesheet" type="text/css" href="~/css/linear_style.css">
    <!-- Custom stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/default.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" id="style_sheet" href="~/css/default.css">
    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Google fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPlayfair+Display:400,700%7CRoboto:100,300,400,400i,500,700">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link rel="stylesheet" type="text/css" href="~/css/ie10-viewport-bug-workaround.css">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script type="text/javascript" src="js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script type="text/javascript" src="~/js/ie-emulation-modes-warning.js"></script>


    <![endif]-->
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="content-area submit-property">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="submit-address">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="main-title-2">
                                <h1><span>Property</span> Information</h1>
                            </div>
                            <div class="search-contents-sidebar">




                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label>Property Description</label>

                                    @Html.EditorFor(model => model.propertyDescription, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.propertyDescription, "", new { @class = "text-danger" })

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Type</label>
                                        @Html.EnumDropDownListFor(
                             model => model.type, "Select My Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Rooms</label>
                                        @Html.EditorFor(model => model.rooms, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.rooms, "", new { @class = "text-danger" })
                                          </div>
                                    </div>
                               
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Bathrooms</label>
                                        @Html.EditorFor(model => model.Bathroom, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Bathroom, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Total Price</label>

                                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Preferred Tenant</label>

                                        @Html.EnumDropDownListFor(
                             model => model.tenantPreferred, "Select My Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.tenantPreferred, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Available For</label>

                                        @Html.EnumDropDownListFor(
                             model => model.availableFor, "Select My Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.availableFor, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address</label>

                                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Locality</label>

                                        @Html.EditorFor(model => model.locality, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.locality, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>City</label>
                                        @Html.EnumDropDownListFor(
                             model => model.city, "Select My Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })


                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>State</label>

                                        @Html.EnumDropDownListFor(
                             model => model.state, "Select My Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Postal Code</label>

                                        @Html.EditorFor(model => model.postalCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.postalCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="main-title-2">
                                <h1><span>Detailed</span> Information</h1>
                            </div>
                             <label class="margin-t-10">Amenities</label>
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-xs-12">
                                   
                                    <div class="">
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isFurnished)
                                            <label for="checkbox4">
                                                IsFurnished
                                            </label>

                                        </div>

                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isSofa)
                                            <label for="checkbox4">
                                                IsSofa
                                            </label>
                                        </div>
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isTelevision)
                                            <label for="checkbox4">
                                                IsTelevision
                                            </label>
                                        </div>
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isWashingMachine)
                                            <label for="checkbox4">
                                                IsWashingMachine
                                            </label>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="col-lg-4 col-sm-4 col-xs-12">
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isFullySetupKitchen)
                                            <label for="checkbox4">
                                                IsFullySetupKitchen
                                            </label>
                                        </div>
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isCupboard)
                                            <label for="checkbox4">
                                                IsCupboard
                                            </label>
                                        </div>
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.isWesternToilet)
                                            <label for="checkbox4">
                                                IsWesternToilet
                                            </label>
                                        </div>
                                    </div>
                                
                                </div>
    <div id="ownerDetails">
        <div class="main-title-2">
            <h1><span>Owner</span> Details</h1>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Owner Name</label>

                @Html.EditorFor(model => model.ownerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ownerName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Email ID</label>

                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Phone No</label>
                @Html.EditorFor(model => model.phoneNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phoneNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Address</label>

                @Html.EditorFor(model => model.owneraddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.owneraddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>City</label>

                @Html.EnumDropDownListFor(
                             model => model.ownerCity, "Select My Type", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ownerCity, "", new { @class = "text-danger" })


            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">

                <label>State</label>
                @Html.EnumDropDownListFor(
                             model => model.ownerState, "Select My Type", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ownerState, "", new { @class = "text-danger" })


            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">

                <label>Country</label>
                @Html.EditorFor(model => model.ownerCountry, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ownerCountry, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Postal Code</label>

                @Html.EditorFor(model => model.ownerPostalCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ownerPostalCode, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Next" class="btn btn-default" />
                                </div>
                            </div>

                        }

                    </div>

                </div>
            </div>
        </div>

</body>
</html>
